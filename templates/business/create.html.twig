			<div class="fleft aide">
				<div class="infos">

				</div>

				<div class="erreurs">
									</div>
			</div>

			<div class="clearer"></div>
		</div>

		<h2 class="margeur-20">{{'Companyinformation'|trans}}</h2>

		<div class="form-element ">
			<div class="fleft">

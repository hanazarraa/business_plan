				<div class="champ">
 {{ form_widget (form.includeitems, {'attr': {'class': 'type-text'}}) }}

				</div>

				<div class="clearer"></div>
			</div>

			<div class="fleft aide">
				<div class="infos">

				</div>

				<div class="erreurs">
									</div>
			</div>

			<div class="clearer"></div>

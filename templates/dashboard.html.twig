					</td>

					<td style="width:260px">
						<div class="fleft acenter fs-22">
							<a href="{{path('monbuisnessplan',{'code':business.code})}}">
								<i class="fa fa-pencil"></i>
								<br />
								<span class="fs-15">modify</span>
							</a>
						</div>

													<div class="fleft acenter fs-22 margeur-l15">
								<a href="#" class="demande-confirmation">
									<i class="fa fa-files-o"></i>
									<br />
									<span class="fs-15">{{'clone'|trans}}</span>
								</a>
							</div>
						
						<div class="fleft margeur-l15 acenter fs-22">
							<a href="{{path('businessdelete',{'code':business.code})}}" class="demande-confirmation icone">
								<i class="fa fa-trash-o"></i>
								<br />
								<span class="fs-15">{{'delete'|trans}}</span>
							</a>
						</div>

						<div class="clearer"></div>
					</td>
				</tr>
                {% endfor %}

			<tr>
				<th class="fs-18">Business plan</th>

				<th></th>

				<th></th>
			</tr>
                       {% for  business in app.user.businessplans %}
							<tr>
					<td>
						<p class="fs-18">
							<a href="{{path('monbuisnessplan',{'code':business.code})}}">
								{{ business.name }}	</a>
						</p>
					</td>

					<td>
						<p>
							{{'bpover'|trans}} {{business.numberofyears}} {{'starting'|trans}} {{business.startmonth}} {{ business.startyear}}						<br />
